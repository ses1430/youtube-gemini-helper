{
  "manifest_version": 3,
  "name": "YouTube to Gemini Helper",
  "version": "1.0",
  "description": "유튜브 영상을 Gemini로 요약 요청하는 확장 프로그램",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["youtube_content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["gemini_content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "gemini_logo.png" ],
      "matches": [ "https://www.youtube.com/*" ]
    }
  ]
}