{
  "manifest_version": 3,
  "name": "YouTube to Gemini Helper",
  "version": "2.0",
  "description": "유튜브 영상의 컨텍스트 메뉴를 통해 Gemini로 요약 요청하는 확장 프로그램",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "contextMenus", 
    "storage"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["gemini_content.js"]
    }
  ]
}